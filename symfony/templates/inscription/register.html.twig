{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class="form_section container">
		<div class="row">
			<div class="col">
				<div class="form_inscription border">
					{% if app.user %}
						<div class="mb-3">
							Connecté en tant que
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Deconnexion</a>
						</div>
					{% else %}
						<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.name) }}
						{{ form_row(registrationForm.plainPassword, {
                label: 'Password'
                }) }}
						{# {{ form_row(registrationForm.agreeTerms) }} #}

						<button type="submit" class="btn btn-lg btn-primary">Inscription</button>
						<div class="mb-3">
							Déja inscrit ?<a href="{{ path('app_login') }}">
								Connexion</a>
						</div>
						{{ form_end(registrationForm) }}
					</d>
				</div>
			</div>
		{% endif %}
	</section>
{% endblock %}
